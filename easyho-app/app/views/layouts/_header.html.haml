%header.navbar
  %div.navbar-inner{ :id => "upperinnerbar"}
    /= link_to "sample app", '#', id: "logo"
    %div.container
      /= link_to "sample app", '#', id: "logo"
      = link_to image_tag("logo1.png", alt: "ZenPills", id: 'logo'), '/'
      %nav
        %ul.nav.pull-right
          -if !signed_in?
            -if !@signup.nil? && @signup == true
              %li
                = link_to "Sign in", signin_path
            -if !@signinflag.nil? && @signinflag == true
              %li
                = link_to "Create new account", signup_path
          -else
            %li{:id => "fat-menu", :class => "dropdown"}
              %a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
                %i.icon-user.icon-white
                = truncate(current_user.firstname, :length => 15)
                %b.caret
              %ul.dropdown-menu
                %li.header_dropdownmenu_element
                  = link_to "Sign out", signout_path, method: "delete"

  -if signed_in?
    %div.navbar-inner{ :id => "lowerinnerbar"}
      %div.well{:id => "lowermenubar"}
        %div.container
          %div.nav.pull-right{:id => "lowernavdiv"}                  
            %ul.nav.pull-right
              %li
                %a.btn-large{:href => myopd_path}
                  = image_tag("myopd.png", :size => "16x16")
                  My OPD
              %li
                %a.btn-large{:href => patientlist_path}
                  = image_tag("patientlist.png", :size => "16x16")
                  Patient list
              %li
                %a.btn-large{:href => new_patient_path}
                  /= image_tag("add_new_patient.png", :size => "16x16")
                  = image_tag("male_patient.png", :size => "16x16")
                  Add new patient              
                            
